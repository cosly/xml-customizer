{
  "name": "xml-customizer",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/api & npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces",
    "deploy": "npm run deploy --workspace=apps/api && npm run deploy --workspace=apps/web",
    "db:migrate": "npm run db:migrate --workspace=apps/api",
    "db:migrate:local": "npm run db:migrate:local --workspace=apps/api"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
